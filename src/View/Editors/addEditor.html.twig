{% extends 'layout.html.twig' %}

{% block title %}
Ajouter un livre
{% endblock title %}

{% block content %}
<nav>
    <div class="logoAndName">
        <img src="/assets/images/logobook.png" alt="My Books Logo">
        <p>MY BOOKS</p>
    </div>
    <h1>Ajouter un éditeur</h1>
    <div class="backHome">
        <a href=""><img src="/assets/images/home.png" alt="Home Logo"><span>Retour à l'accueil</span></a>
    </div>
</nav>

<form class="addForm" action="/editor/add" method="post" enctype="multipart/form-data">
    <div class="editor">
        <label for="editor_name">Editeur:</label>
        <div class="addEditor">
            <input type="text" id="editor_name" name="editor_name" placeholder="Saissisez l'éditeur" required>
            <input class="addElement" type="submit" value="">
        </div>
        <p class="errors">{{ errors[0] }}</p>
    </div>
</form>
{% endblock %}
