{% extends 'layout.html.twig' %}

{% block title %}
    Ajouter un livre
{% endblock title %}

{% block content %}
    

    <form action="" method="post" enctype="multipart/form-data">
        <div class="cover_page">
            <label for="imageUpload">Choissisez une page de couverture</label>
            <input type="file" name="avatar" id="imageUpload" disabled/>
        </div>
        
        <div class="title">
            <label for="title">Titre :</label>
            <input type="text" id="title" name="title" placeholder="Saissisez le titre" disabled>
        </div>
            
        <div class="release_date">
            <label for="release_date">Date de sortie :</label>
            <input type="date" name="release_date" id="release_date" disabled>
        </div>
        <div class="editorAdd">
                <label for="editor_name">Auteur :</label>
                <input type="text" id="editor_name" name="editor_name" placeholder="Saissisez l'éditeur">
                <input type="submit" value="✔️">
        </div>
        
        </div>
        
        <div class="category">
            <label for="category">Catégorie :</label>
            <select name="category" id="category" disabled>
                <option value="none" selected disabled hidden>Choissisez une catégorie</option>
                {% for category in categories %}
                    <option value="{{ category.category_id }}">{{ category.category_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="format">
            <label for="format">Format :</label>
            <select name="format" id="format" disabled>
                <option value="none" selected disabled hidden>Choissisez un format</option>
                {% for format in formats %}
                    <option value="{{ format.format_id }}">{{ format.format_name }}</option> 
                {% endfor %}
                
            </select>
        </div>
        <div class="emplacement">
            <label for="emplacement">Emplacement :</label>
            <select name="emplacement" id="emplacement" disabled>
                <option value="none" selected disabled hidden>Choissisez un emplacement</option>
                {% for emplacement in emplacements %}
                    <option value="{{ emplacement.emplacement_id }}">{{ emplacement.emplacement_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="status">
            <label for="status">Etat :</label>
            <select name="status" id="status" disabled>
                <option value="none" selected disabled hidden>Choissisez un etat</option>
                {% for statut in status %}
                    <option value="{{ statut.status_id }}">{{ statut.status_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
    </form>

{{ errors[0] }}







{% endblock %}
