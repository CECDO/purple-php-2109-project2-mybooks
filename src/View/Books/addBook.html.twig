{% extends 'layout.html.twig' %}

{% block title %}
    Ajouter un livre
{% endblock title %}

{% block content %}


    <form action="" method="post">
        <div class="cover_page">
            <label for="imageUpload"></label>
            <input type="file" name="avatar" id="imageUpload" />
        </div>
        
        <div class="title">
            <label for="title">Titre :</label>
            <input type="text" id="title" name="title" placeholder="Saissisez le titre">
        </div>
        <div class="author">
            <label for="author">Auteur :</label>
            <select name="author" id="author">
                <option value="none" selected disabled hidden>Choissisez un auteur</option>
                {% for author in authors %}
                    <option value="{{ author.authors_id }}">{{ author.authors_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="release_date">
            <label for="release_date">Date de sortie :</label>
            <input type="date" name="release_date" id="release_date">
        </div>
        <div class="editor">
            <label for="editor">Editeur :</label>
            <select name="editor" id="editor">
                <option value="none" selected disabled hidden>Choissisez un éditeur</option>
                {% for editor in editors %}
                    <option value="{{ editor.editor_id }}">{{ editor.editor_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="category">
            <label for="category">Catégorie :</label>
            <select name="category" id="category">
                <option value="none" selected disabled hidden>Choissisez une catégorie</option>
                {% for category in categories %}
                    <option value="{{ category.category_id }}">{{ category.category_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="format">
            <label for="format">Format :</label>
            <select name="format" id="format">
                <option value="none" selected disabled hidden>Choissisez un format</option>
                {% for format in formats %}
                    <option value="{{ format.format_id }}">{{ format.format_name }}</option> 
                {% endfor %}
                
            </select>
        </div>
        <div class="emplacement">
            <label for="emplacement">Emplacement :</label>
            <select name="emplacement" id="emplacement">
                <option value="none" selected disabled hidden>Choissisez un emplacement</option>
                {% for emplacement in emplacements %}
                    <option value="{{ emplacement.emplacement_id }}">{{ emplacement.emplacement_name }}</option> 
                {% endfor %}
            </select>
        </div>
        
        <div class="status">
            <label for="status">Etat :</label>
            <select name="status" id="status">
                <option value="none" selected disabled hidden>Choissisez un etat</option>
                {% for statut in status %}
                    <option value="{{ statut.status_id }}">{{ statut.status_name }}</option> 
                {% endfor %}
            </select>
        </div>
        <input type="submit" value="Send">

    </form>
    <a href="add_information">add Information</a>








{% endblock %}
