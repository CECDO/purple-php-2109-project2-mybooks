{% extends 'layout.html.twig' %}

{% block title %}
    Ajouter un livre
{% endblock title %}

{% block content %}

    <nav>
        <section class="logoAndName" >
            <img src="/assets/images/logobook.png" alt="My Books Logo">
            <p>MY BOOKS</p>
        </section>
        <h1>Ajouter un nouveau livre</h1>
        <section class="backHome" >
            <a href=""><img src="/assets/images/home.png" alt="Home Logo"><span>Retour à l'accueil</span></a>
        </section>

        
    </nav>

    <form action="" method="post" enctype="multipart/form-data">
        <div class="cover_page">
            <label for="imageUpload">Choissisez une page de couverture</label>
            <input type="file" name="avatar" id="imageUpload" />
        </div>
        
        <div class="title">
            <label for="title">Titre :</label>
            <input type="text" id="title" name="title" placeholder="Saissisez le titre">
        </div>
        <div class="author">
            <label for="author">Auteur :</label>
            <select name="author" id="author">
                <option value="none" selected disabled hidden>Choissisez un auteur</option>
                {% for author in authors %}
                    <option value="{{ author.id }}">{{ author.name }}</option> 
                {% endfor %}
            </select>
            <div class="authorAdd">
                <a href="/authors/add"><input type="button" value="+"></a>
            </div>
        </div>
        
        <div class="release_date">
            <label for="release_date">Date de sortie :</label>
            <input type="date" name="release_date" id="release_date">
        </div>
        <div class="editor">
            <label for="editor">Editeur :</label>
            <select name="editor" id="editor">
                <option value="none" selected disabled hidden>Choissisez un éditeur</option>
                {% for editor in editors %}
                    <option value="{{ editor.id }}">{{ editor.name }}</option> 
                {% endfor %}
            </select>
            <div class="editorAdd">
                <a href="/editors/add"><input type="button" value="+"></a>
            </div>
        </div>
        
        <div class="category">
            <label for="category">Catégorie :</label>
            <select name="category" id="category">
                <option value="none" selected disabled hidden>Choissisez une catégorie</option>
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option> 
                {% endfor %}
            </select>
            <div class="authorAdd">
                <a href="/categories/add"><input type="button" value="+"></a>
            </div>
        </div>
        
        <div class="format">
            <label for="format">Format :</label>
            <select name="format" id="format">
                <option value="none" selected disabled hidden>Choissisez un format</option>
                {% for format in formats %}
                    <option value="{{ format.id }}">{{ format.name }}</option> 
                {% endfor %}
                
            </select>
        </div>
        <div class="location">
            <label for="location">Emplacement :</label>
            <select name="location" id="location">
                <option value="none" selected disabled hidden>Choissisez un emplacement</option>
                {% for location in locations %}
                    <option value="{{ location.id }}">{{ location.name }}</option> 
                {% endfor %}
            </select>
            <div class="locationAdd">
                <a href="/locations/add"><input type="button" value="+"></a>
            </div>
        </div>
        
        <div class="status">
            <label for="status">Etat :</label>
            <select name="status" id="status">
                <option value="none" selected disabled hidden>Choissisez un etat</option>
                {% for statut in status %}
                    <option value="{{ statut.id }}">{{ statut.name }}</option> 
                {% endfor %}
            </select>
        </div>
        <input type="submit" value="Send">
    </form>
    {{ incompletForm }}<br>
    
    <br>
    <a href="addproperties">add Information</a>








{% endblock %}
